<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/xx"
    android:background="#00FFBF"


    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/manualLayout"
        >





        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="100dp"
            android:id="@+id/scrollView" >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="auto_fit"
                android:columnCount="2"
                android:layout_marginBottom="55dp"
                android:rowCount="6"


                android:id="@+id/gridLayout"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/letters11"
                    android:clickable="true"
                    android:layout_row="0"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/textView9"
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:background="@drawable/letter115"
                    android:layout_marginLeft="12dp"

                    android:layout_row="0"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:id="@+id/textView10"
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:layout_column="1" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="12dp"
                    android:clickable="true"
                    android:background="@drawable/round81"
                    android:layout_row="2"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:layout_gravity="center"
                    android:id="@+id/textView11"
                    android:layout_row="3"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="12dp"
                    android:clickable="true"
                    android:background="@drawable/close6"
                    android:layout_row="2"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:id="@+id/textView12"
                    android:layout_gravity="center"
                    android:layout_row="3"
                    android:layout_column="1" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="12dp"
                    android:clickable="true"
                    android:background="@drawable/round66"
                    android:layout_row="4"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="i"
                    android:id="@+id/textView13"
                    android:layout_gravity="center"
                    android:layout_row="5"
                    android:layout_column="0" />


                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="12dp"
                    android:clickable="true"
                    android:background="@drawable/copyright"
                    android:layout_row="4"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c"
                    android:id="@+id/textView14"
                    android:layout_gravity="center"
                    android:layout_row="5"
                    android:layout_column="1" />


            </GridLayout>
        </ScrollView>



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/voice_switch"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:layout_alignLeft="@+id/scrollView"
            android:layout_alignStart="@+id/scrollView"
            android:layout_alignRight="@+id/scrollView"
            android:layout_alignEnd="@+id/scrollView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button4"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/voice_switch"
            android:layout_alignEnd="@+id/voice_switch"
            android:layout_alignLeft="@+id/voice_switch"
            android:layout_alignStart="@+id/voice_switch" />


        <!--
        <ExpandableListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exp_list"
            android:layout_below="@+id/spinner"
            android:layout_centerHorizontal="true" />
          !-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/voiceLayout"
        android:visibility="gone"
        >



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Search"
            android:drawableRight="@drawable/arrowback"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</FrameLayout>
